generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model tbl_pet {
  id                     Int     @id @default(autoincrement())
  nome                   String  @db.VarChar(100)
  idade                  Int
  sexo                   String  @db.Enum("Macho", "Fêmea")
  tamanho                Float   @db.Double // Mudado para Float para bater com double(4,2)
  status_adocao          String  @db.Enum("Disponível", "Em processo de adoção", "Já foi Adotado")
  nacionalidade          String  @db.VarChar(200)
  necessidades_especiais String? @db.Text // Mudado para String conforme SQL (text)
  descricao              String? @db.Text
  midia                  String  @db.VarChar(255)
  id_especie             Int
  id_responsavel_pet     Int
  id_abrigo              Int

  @@map("tbl_pet")
}

model tbl_especie {
  id        Int     @id @default(autoincrement())
  nome      String  @db.VarChar(100)
  habitat   String  @db.VarChar(100)
  descricao String? @db.Text

  @@map("tbl_especie")
}

model tbl_raca {
  id                  Int     @id @default(autoincrement())
  nome                String  @db.VarChar(100)
  expectativa_de_vida Int
  saude               String  @db.Text
  peso_medio          Int?
  porte               String  @db.Enum("Pequeno", "Médio", "Grande", "Gigante")
  capacidades         String? @db.Text
  id_especie          Int

  @@map("tbl_raca")
}