generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model tbl_Pet {
  id                     Int     @id @default(autoincrement())
  nome                   String  @db.VarChar(100)
  idade                  Int
  sexo                   String  @db.VarChar(10)
  tamanho                String  @db.VarChar(20)
  status_adocao          String  @db.VarChar(50)
  nacionalidade          String  @db.VarChar(50)
  necessidades_especiais Boolean
  descricao              String  @db.Text
  midia                  String? @db.Text

  @@map("tbl_Pet")
}

model tbl_Especie {
  id        Int    @id @default(autoincrement())
  nome      String @db.VarChar(100)
  habitat   String @db.VarChar(100)
  descricao String @db.Text

  @@map("tbl_Especie")
}

model tbl_Pet_Especie {
  id         Int @id @default(autoincrement())
  id_Pet     Int
  id_Especie Int
  @@map("tbl_Pet_Especie")
}

model tbl_Responsavel {
  id       Int    @id @default(autoincrement())
  nome     String @db.VarChar(100)
  email    String @unique @db.VarChar(255)
  telefone String @db.VarChar(20)
  senha    String @db.VarChar(255)

  @@map("tbl_Responsavel")
}
